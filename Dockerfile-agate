FROM python:3.10.17-alpine3.21
RUN pip3 install --upgrade pip setuptools

ARG version="latest"
ENV AIAS_VERSION=${version}

LABEL io.arlas.agate.version=${version}
LABEL vendor="Gisa√Øa"
LABEL description="This container serves ARLAS AGATE"

RUN addgroup -g 1000 arlasgroup && \
    adduser -D -u 1000 -G arlasgroup arlasuser
USER 1000
WORKDIR /app

COPY --chown=arlasuser:arlasgroup ./agate/requirements.txt /app/requirements.txt

RUN pip install --no-cache-dir -r requirements.txt

COPY --chown=arlasuser:arlasgroup ./agate /app/agate
COPY --chown=arlasuser:arlasgroup ./aias_common /app/aias_common
COPY --chown=arlasuser:arlasgroup ./conf/agate.yaml /app/conf/
COPY --chown=arlasuser:arlasgroup ./scripts/agate/start.sh /app/

EXPOSE 8004
ENTRYPOINT ["./start.sh"]
