FROM python:3.12-alpine3.21
ARG version="0.0"
ENV AIAS_VERSION=${version}

LABEL io.arlas.aproc-service.version=${version}
LABEL vendor="Gisa√Øa"
LABEL description="This container serves ARLAS APROC Service"

RUN apk update \
    && apk add --no-cache python3 py3-pip \
    && apk --no-cache add curl

RUN addgroup -g 1000 arlasgroup && \
    adduser -D -u 1000 -G arlasgroup arlasuser

USER 1000
WORKDIR /app

COPY --chown=arlasuser:arlasgroup ./aproc/requirements.txt /app/requirements.txt
COPY --chown=arlasuser:arlasgroup ./extensions/requirements.storage.txt /app/requirements.storage.txt

RUN python -m venv aproc \
    && aproc/bin/pip install --no-cache-dir \
        -r /app/requirements.txt \
        -r /app/requirements.storage.txt

COPY --chown=arlasuser:arlasgroup ./aproc /app/aproc
COPY --chown=arlasuser:arlasgroup ./extensions /app/extensions
COPY --chown=arlasuser:arlasgroup ./airs/core/ /app/airs/core/
COPY --chown=arlasuser:arlasgroup ./aias_common /app/aias_common
COPY --chown=arlasuser:arlasgroup ./conf /app/conf
COPY --chown=arlasuser:arlasgroup ./scripts/aproc/start.sh /app/
COPY --chown=arlasuser:arlasgroup ./conf /app/conf

ENV APROC_CONFIGURATION_FILE=/app/conf/aproc.yaml
ENV PYTHONPATH=/app/

EXPOSE 8001
ENTRYPOINT ["./start.sh"]